{
  "model": {
    "input_file": "../inputs/TOR_hand_input.py",
    "architecture_file" : "../encoder/fcn32_vgg.py",
    "objective_file" : "../decoder/TOR_multiloss.py",
    "optimizer_file" : "../optimizer/TOR_optimizer.py",
    "evaluator_file" : "../evals/TOR_hand_eval.py"
  },
  "path": ["../incl"],

  "data": {
    "train_file" : "hands/train_hand.txt",
    "val_file" : "hands/val_hand.txt",
    "hand_color1" : [100,100,100],
    "hand_color2" : [150,150,150],
    "hand_color3" : [255,255,255],
    "background_color" : [0,0,0],
    "vgg_url": "ftp://mi.eng.cam.ac.uk/pub/mttt2/models/vgg16.npy",
    "kitti_url": ""
  },

  "arch": {
    "fcn_in": "fc7",
    "num_classes" : 2,
    "image_size" : 50,
    "weight": [1, 1],
    "num_channels" : 3,
    "whitening": false
  },

  "jitter": {
    "random_resize": false,
    "lower_size": 0.4,
    "upper_size": 1.7,
    "sig": 0.15,
    "res_chance": 0.4,
    "random_crop": true,
    "max_crop": 32,
    "crop_patch": false,
    "patch_height": 256,
    "patch_width": 256,
    "crop_chance": 0.8,
    "fix_shape": false,
    "resize_image": true,
    "image_height" : 399,
    "image_width" : 399,

    "augment_level": 0
  },

  "logging": {
    "display_iter": 50,
    "eval_iter": 500,
    "write_iter": 5000,
    "save_iter": 5000,
    "image_iter": 5000
  },

  "solver": {
      "opt": "Adam",
      "batch_size": 16,
      "epsilon": 0.000000001,
      "adam_eps": 0.00001,
      "threads": 4,
      "learning_rate": 1e-5,
      "learning_rate_step": null,
      "max_steps": 10000
  },
  "use_fc_wd": true,
  "loss": "xentropy",
  "clip_norm" : 1.0,
  "wd": 5e-4
}
